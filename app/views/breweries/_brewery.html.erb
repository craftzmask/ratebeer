<div id="<%= dom_id brewery %>">
  <h2><%= brewery.name %></h2>
  <p>Established in: <%= brewery.year %></p>
  <p>Beers count: <%= brewery.beers.count %></p>
  <p>
    <% brewery.beers.each do |beer| %>
      <%= link_to beer.name, beer %>
    <% end %>
  </p>

  <p>Brewery has <%= brewery.ratings.count %> ratings with an average of <%= brewery.average_rating %></p>

  <p>
    <%= link_to "List of all beers", beers_path %>
  </p>
</div>
